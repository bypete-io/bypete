{#- sitemap -#}
<?xml version="1.0" encoding="utf-8"?>{# djlint:off #}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for page in collections.all %}
        {%- set absoluteUrl %}{{ page.url | url | absoluteUrl(metadata.url) }}{% endset %}
        <url>
            <loc>{{ absoluteUrl }}</loc>
            <lastmod>{{ page.data.lastmod | htmlDateString if page.data.lastmod else page.date | htmlDateString }}</lastmod>
        </url>
        {% endfor -%}
  </urlset>{# djlint:on #}
