{% if eleventyNavigation -%}
  <nav aria-label="Breadcrumb">
    {% set crumbs = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key, {includeSelf: true}) %}
    <ul class="flex w-full divide-x items-center">
      <li class="py-1 px-2 first:pl-0 last:pr-0">
        <a href="/" class="link">
          <svg alt="home"
               xmlns="http://www.w3.org/2000/svg"
               class="h-5 w-5"
               viewBox="0 0 20 20"
               fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
      {% for entry in crumbs %}
        <li class="py-1 px-2 first:pl-0 last:pr-0 ">
          {% if entry.url != page.url %}
            <a href="{{ entry.url | url }}" class="block link">{{ entry.title | safe }}</a>
          {% else %}
            <span aria-current="page">{{ entry.title | safe }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{%- endif %}
